<html>

<head>
    <title>Catalog</title>

    <style>
        html,
        body { width: 100%; height: 100%; margin: 0px; }
        .name-header { height: 80px; color: white; background-color: #3f51b5; }
        .image-container { width: 50%; min-width: 400px; padding: 15px; }
        .product-header { background-color: #efefef; }
        .product-name { padding: 15px }
        .product-price { white-space: nowrap; padding: 15px; text-align: center; }
        .product-desc { padding: 15px; width: 50%; }
        .main-image-container { display: flex; text-align: center; }
        .main-image { width: 70%; margin: auto; }
    </style>
</head>

<body>
    <table class="container">
        <tr>
            <th colspan="2" class="name-header">
                {{ inputData.name }}
            </th>
        </tr>
        {{#each inputData.products}}
        <tr>
            <td colspan="2" class="product-header">
                <div class="product-name">{{ name }}</div>
            </td>
        </tr>
        <tr>
            <td class="main-image-container">
                <img src="{{ product.defaultImage }}" class="main-image">
                <div class="product-price"> &#8377;  {{ cost }} </div>
            </td>
            <td class="product-desc">
                {{{ product.description }}}
            </td>
        </tr>
        {{/each}}
    </table>
</body>

</html>