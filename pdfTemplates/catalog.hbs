<html>

<head>
    <title>Catalog</title>

    <style>
        html,
        body {
            width: 100%;
            height: 100%;
            margin: 0px;
            font-family: Arial, Helvetica, sans-serif;
        }

        .header-image {
            width: 100%;
        }

        .name-header {
            height: 80px;
            color: white;
            background-color: #3f51b5;
        }

        .image-container {
            width: 50%;
            min-width: 400px;
            padding: 15px;
        }

        .product-header {
            height: 20px;
            border-top: solid 2px #efefef;
        }

        .product-detail-container {
            vertical-align: top;
        }

        .product {
            width: 100%;
            height: auto;
            page-break-inside: avoid;
        }

        .product-name {
            padding: 15px
        }

        .product-price {
            white-space: nowrap;
            padding: 15px;
            text-align: center;
        }

        .product-desc {
            padding: 15px;
            width: 50%;
            font-size: smaller;
        }

        .main-image-container {
            display: flex;
            text-align: center;
        }

        .main-image {
            width: 70%;
            margin: auto;
        }

        .other-image-container {
            width: 100%;
        }

        .other-image-box {
            width: 25%;
            padding: 15px;
            height: 200px;
            float: left;
            text-align: center;
            vertical-align: middle;
            border: solid 1px #efefef;
        }

        .other-image {
            margin: auto;
            width: 70%;
        }
    </style>
</head>

<body>
    <table class="container">
        <tr>
            <th colspan="2">
                <img src="images/banner.png" class="header-image">
            </th>
        </tr>
        <tr>
            <th colspan="2" class="name-header">
                {{ inputData.name }}
            </th>
        </tr>
        {{#each inputData.products}}
        <tr>
            <td colspan="2" class="product-header">

            </td>
        </tr>
        <tr class="product-detail-container">
            <td class="main-image-container">
                <img src="{{ product.defaultImage }}" class="main-image">
                <div class="product-price"> &#8377; {{ cost }} </div>
            </td>
            <td>
                <div class="product">
                    <div class="product-name"><b>{{ name }}</b></div>
                    <div class="product-desc">
                        {{{ product.description }}}
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2" class="other-image-container">
                {{#each product.images}}
                <div class="other-image-box">
                    <img src="{{ this }}" class="other-image">
                </div>
                {{/each}}
            </td>
        </tr>
        {{/each}}
    </table>
</body>

</html>